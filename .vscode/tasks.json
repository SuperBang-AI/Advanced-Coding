{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git: 一键推送",
            "type": "shell",
            "command": "git",
            "args": ["add", ".", "&&", "git", "commit", "-m", "${input:commitMessage}", "&&", "git", "push"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Git: 快速推送（默认消息）",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "git add . && git commit -m 'Update: $(date)' && git push"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "commitMessage",
            "description": "输入提交信息",
            "default": "Update files",
            "type": "promptString"
        }
    ]
} 